    </None>
    <None Update="images\FM_Logo_Main_Menu.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="images\NotificationBell_No_Notifications.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="images\NotificationBell_With_Notifications.png">
